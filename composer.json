{
    "name": "gollumeo/php-oop",
    "description": "A legacy PHP (>= 8.2) OOP boilerplate",
    "version": "0.8",
    "autoload": {
        "psr-4": {
            "app\\": "app/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "php -d variables_order=EGPCS -r \"putenv('COMPOSER_INTERACTIVE=1');\" && php setup.php"
        ]
    },
    "require": {
        "bramus/router": "^1.6",
        "vlucas/phpdotenv": "^5.6",
        "filp/whoops": "^2.15",
        "ext-pdo": "*"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.2",
        "phpunit/phpunit": "^10.1"
    }
}
